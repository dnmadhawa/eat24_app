<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeliveryListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/deliverylist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="Delivery List" />
        </RelativeLayout>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                card_view:cardCornerRadius="12dp"
                card_view:cardElevation="6dp">

                <GridLayout
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alignmentMode="alignMargins"
                    android:columnCount="2"
                    android:columnOrderPreserved="false">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_columnWeight="1"
                        android:padding="3dp">

                        <TextView
                            android:layout_width="165dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:text="#002 - Rs200.00"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textColor="@color/font_color" />

                        <TextView
                            android:layout_width="165dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="11dp"
                            android:text="08/05/2022 05.10p.m"
                            android:textColor="@color/font_color"
                            android:textSize="12dp" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="2dp"
                        android:paddingHorizontal="5dp"
                        android:layout_marginRight="50dp"
                        android:layout_margin="12dp"
                        android:textStyle="bold"
                        android:background="@drawable/bg_rounded"
                        android:backgroundTint="#37A425"
                        android:text="Completed"
                        android:textColor="@color/white"
                        android:textSize="12dp" />
                </GridLayout>

            </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="6dp">

            <GridLayout
                android:paddingVertical="5dp"
                android:paddingHorizontal="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:columnOrderPreserved="false">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_columnWeight="1"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="#003 - Rs1300.00"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/font_color" />

                    <TextView
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11dp"
                        android:text="08/05/2022 05.08p.m"
                        android:textColor="@color/font_color"
                        android:textSize="12dp" />
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="2dp"
                    android:paddingHorizontal="5dp"
                    android:layout_marginRight="50dp"
                    android:layout_margin="12dp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_rounded"
                    android:backgroundTint="#37A425"
                    android:text="Completed"
                    android:textColor="@color/white"
                    android:textSize="12dp" />
            </GridLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="6dp">

            <GridLayout
                android:paddingVertical="5dp"
                android:paddingHorizontal="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:columnOrderPreserved="false">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_columnWeight="1"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="#001 - Rs200.00"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/font_color" />

                    <TextView
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11dp"
                        android:text="08/05/2022 05.06p.m"
                        android:textColor="@color/font_color"
                        android:textSize="12dp" />
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="2dp"
                    android:paddingHorizontal="5dp"
                    android:layout_marginRight="50dp"
                    android:layout_margin="12dp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_rounded"
                    android:backgroundTint="#37A425"
                    android:text="Completed"
                    android:textColor="@color/white"
                    android:textSize="12dp" />
            </GridLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</FrameLayout>