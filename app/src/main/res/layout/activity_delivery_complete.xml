<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".DeliveryComplete">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/toolbar"
                android:layout_width="45dp"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/back_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Edit Delivery"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="ObsoleteLayoutParam" />
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="#002"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        tools:ignore="ObsoleteLayoutParam" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="08/05/2022 05.22p.m"
                        android:textSize="13dp"
                        tools:ignore="ObsoleteLayoutParam" />
                </RelativeLayout>

                <GridLayout
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/yellow_500"
                    android:layout_marginBottom="5dp"
                    android:columnCount="3"
                    android:rowCount="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="Creamy chicken cheese kottu"
                        android:textSize="14dp"
                        tools:ignore="ObsoleteLayoutParam" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="2"
                        android:textSize="14dp"
                        tools:ignore="ObsoleteLayoutParam" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="1000.00"
                        android:textSize="14dp"
                        tools:ignore="ObsoleteLayoutParam" />




                    <RelativeLayout
                        android:layout_columnWeight="1"
                        android:layout_columnSpan="3"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/status_botton"
                            android:backgroundTint="#E47575"
                            android:text="Prepared"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            tools:ignore="ObsoleteLayoutParam" />
                    </RelativeLayout>
                </GridLayout>

                <GridLayout
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/yellow_500"
                    android:layout_marginBottom="5dp"
                    android:columnCount="3"
                    android:rowCount="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="Creamy chicken cheese kottu"
                        android:textSize="14dp"
                        tools:ignore="ObsoleteLayoutParam" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="2"
                        android:textSize="14dp"
                        tools:ignore="ObsoleteLayoutParam" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="1000.00"
                        android:textSize="14dp"
                        tools:ignore="ObsoleteLayoutParam" />


                    <RelativeLayout
                        android:layout_columnWeight="1"
                        android:layout_columnSpan="3"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/status_botton"
                            android:backgroundTint="#E47575"
                            android:text="Prepared"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            tools:ignore="ObsoleteLayoutParam" />
                    </RelativeLayout>
                </GridLayout>

                <GridLayout
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:columnCount="3"
                    android:rowCount="4">
                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_columnWeight="1"
                        android:textAlignment="textEnd"
                        android:layout_columnSpan="2"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="#E47575"
                        android:text="Sub Total"
                        android:textSize="16dp"
                        android:textColor="@color/font_color"
                        android:textStyle="bold"
                        tools:ignore="ObsoleteLayoutParam" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_columnWeight="1"
                        android:backgroundTint="#E47575"
                        android:text="2000.00"
                        android:textSize="16dp"
                        android:textColor="@color/font_color"
                        android:textStyle="bold"
                        tools:ignore="ObsoleteLayoutParam" />
                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_columnWeight="1"
                        android:textAlignment="textEnd"
                        android:layout_columnSpan="2"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="#E47575"
                        android:text="Delivery Fee"
                        android:textSize="16dp"
                        android:layout_marginBottom="2px"
                        android:textColor="@color/font_color"
                        android:textStyle="bold"
                        tools:ignore="ObsoleteLayoutParam" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_columnWeight="1"
                        android:backgroundTint="#E47575"
                        android:text="100.00"
                        android:textSize="16dp"
                        android:textColor="@color/font_color"
                        android:textStyle="bold"
                        tools:ignore="ObsoleteLayoutParam" />
                    <TextView
                        style="?android:attr/listSeparatorTextViewStyle"
                        android:paddingTop="5dip"
                        android:layout_columnSpan="3"
                        android:gravity="center_horizontal"
                        android:layout_below="@+id/connect_help"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#000" />
                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_columnWeight="1"
                        android:textAlignment="textEnd"
                        android:layout_columnSpan="2"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="#E47575"
                        android:text="Total"
                        android:textSize="16dp"
                        android:textColor="@color/font_color"
                        android:textStyle="bold"
                        tools:ignore="ObsoleteLayoutParam" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_columnWeight="1"
                        android:backgroundTint="#E47575"
                        android:text="2100.00"
                        android:textSize="16dp"
                        android:textColor="@color/font_color"
                        android:textStyle="bold"
                        tools:ignore="ObsoleteLayoutParam" />
                </GridLayout>
                <TextView
                    android:id="@+id/line"
                    style="?android:attr/listSeparatorTextViewStyle"
                    android:paddingTop="5dip"
                    android:gravity="center_horizontal"
                    android:layout_below="@+id/connect_help"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_columnWeight="1"
                        android:backgroundTint="#E47575"
                        android:text="Name : "
                        android:textSize="16dp"
                        android:textColor="@color/font_color"
                        tools:ignore="ObsoleteLayoutParam" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_columnWeight="1"
                        android:backgroundTint="#E47575"
                        android:text="Kamal Perera"
                        android:textSize="16dp"
                        android:textColor="@color/font_color"
                        tools:ignore="ObsoleteLayoutParam" />
                </LinearLayout>

                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_columnWeight="1"
                        android:backgroundTint="#E47575"
                        android:text="Mobile Number : "
                        android:textSize="16dp"
                        android:textColor="@color/font_color"
                        tools:ignore="ObsoleteLayoutParam" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_columnWeight="1"
                        android:backgroundTint="#E47575"
                        android:text="011 2268956"
                        android:textSize="16dp"
                        android:textColor="@color/font_color"
                        tools:ignore="ObsoleteLayoutParam" />
                </LinearLayout>

                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_columnWeight="1"
                        android:backgroundTint="#E47575"
                        android:text="Address : "
                        android:textSize="16dp"
                        android:textColor="@color/font_color"
                        tools:ignore="ObsoleteLayoutParam" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_columnWeight="1"
                        android:backgroundTint="#E47575"
                        android:text="Jothipala Mawatha,Malabe"
                        android:textSize="16dp"
                        android:textColor="@color/font_color"
                        tools:ignore="ObsoleteLayoutParam" />
                </LinearLayout>

                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_columnWeight="1"
                        android:backgroundTint="#E47575"
                        android:text="Note : "
                        android:textSize="16dp"
                        android:textColor="@color/font_color"
                        tools:ignore="ObsoleteLayoutParam" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_columnWeight="1"
                        android:backgroundTint="#E47575"
                        android:text=""
                        android:textSize="16dp"
                        android:textColor="@color/font_color"
                        tools:ignore="ObsoleteLayoutParam" />
                </LinearLayout>

                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_columnWeight="1"
                        android:backgroundTint="#E47575"
                        android:text="Delivery Fee : "
                        android:textSize="16dp"
                        android:textColor="@color/font_color"
                        tools:ignore="ObsoleteLayoutParam" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_columnWeight="1"
                        android:backgroundTint="#E47575"
                        android:text="100.00"
                        android:textSize="16dp"
                        android:textColor="@color/font_color"
                        tools:ignore="ObsoleteLayoutParam" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <Button
                        android:id="@+id/button"
                        style="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="20dp"
                        android:backgroundTint="@color/yellow_500"
                        android:text="Complete"
                        android:textAllCaps="false"
                        android:textColor="@color/font_color"
                        android:textSize="18dp"
                        card_view:cornerRadius="5dp"
                        card_view:iconTint="#000000" />
                </RelativeLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>